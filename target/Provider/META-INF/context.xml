<!-- Change the lines below according your RDBMS and DB -->

<Context>

	<Resource name="jdbc/internet_provider"
			  auth="Container"
			  type="javax.sql.DataSource"
			  maxActive="100" maxIdle="30" maxWait="10000"
			  username="user" password="userpass"
			  driverClassName="com.mysql.cj.jdbc.Driver"
			  defaultAutoCommit="false"
			  defaultTransactionIsolation="READ_COMMITTED"
			  connectionProperties="serverTimezone=UTC;useUnicode=yes;characterEncoding=utf8;"
			  url="jdbc:mysql://localhost:3306/internet_provider"
			  removeAbandoned="true" removeAbandonedTimeout="30" logAbandoned="true"/>
</Context>
